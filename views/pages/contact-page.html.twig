{#
 # Contact page
 #
 # @package WordPress
 # @subpackage LesRapporteuses
 # @purgeCSS Contact-page error-message form
 #}

{% extends 'index.html.twig' %}

{% block main %}

	{{ parent() }}

	<div class="container mt-5" data-module-form>
		<div class="row">
			<div class="lg:col-10/12 lg:ml-1/12">
				<form class="transition-opacity" data-form="form">

					<div data-form="error" style="display: none;">
						{{- __( 'Oops, something went wrong. Please try again.', 'uni' ) -}}
					</div>

					<div data-form="success" style="display: none;">
						{{- __( 'Thank you! Your submission has been sent.', 'uni' ) -}}
					</div>

					<div class="flex-col gap-y-5" data-form="content" style="display: flex;">

						<div>
							<label class="block mb-2.5 uppercase" for="full_name">{{- __( 'Your first and last name', 'lesrapporteuses' ) -}}</label>
							<input class="bg-neutral-200 p-2.5 w-full" id="full_name" name="full_name" required type="text">
						</div>

						<div>
							<label class="block mb-2.5 uppercase" for="email">{{- __( 'Your email', 'lesrapporteuses' ) -}}</label>
							<input class="bg-neutral-200 p-2.5 w-full" id="email" type="email" required name="email" autocomplete="email">
						</div>

						<div>
							<label class="block mb-2.5 uppercase" for="message">{{- __( 'Your message', 'lesrapporteuses' ) -}}</label>
							<textarea class="bg-neutral-200 p-2.5 w-full min-h-[2.75rem] max-w-full" name="message" id="message" required></textarea>
						</div>


						<div class="text-right">
							<button class="text-2xl uppercase font-bold" type="submit">
								{{-  __( 'Send', 'lesrapporteuses' ) -}}
							</button>
						</div>

					</div>

				</form>
			</div>
		</div>
	</div>


{% endblock  %}
