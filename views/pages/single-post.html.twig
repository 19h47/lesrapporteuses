{#
 # Single: Post
 #
 # @package WordPress
 # @subpackage CreatorFund
 #}

{% extends 'index.html.twig' %}

{% block main %}
	<main class="my-10 lg:my-20 space-y-20">
		<div class="container">
			<div class="row">
				<div class="lg:col-5/12">

					<h1 class="text-2xl lg:text-4xl font-bold">
						{{- post.title -}}
					</h1>
					<p class="mt-3"><strong>{{- __( 'By %s', 'creatorfund' ) | format( post.author.display_name ) -}}</strong>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&vert;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;{{- post.date -}}</p>
					<div class="wysiwyg font-light text-lg mt-8">{{- post.content -}}</div>
				</div>
				<div class="lg:col-6/12 lg:ml-1/12 mt-8 lg:mt-0">
					<div class="bg-theme-gray pb-[100%] relative">
						{{- include( 'components/image.html.twig', { classes: [ 'absolute', 'inset-0', 'w-full', 'h-full', 'object-cover', 'object-center' ], image: post.thumbnail, size: 'size-6' } ) -}}
					</div>
				</div>
			</div>
		</div>

		{{- include( 'blocks/blocks.html.twig', { blocks: post.meta( 'blocks' ) } ) -}}

		<div class="container">
			<div class="row">
				<div class="text-center">
					<p class="mb-3 font-bold text-sm">{{- __( 'Shares:', 'creatorfund' ) -}}</p>
					{{- include('components/shares.html.twig' ) -}}
				</div>
			</div>
		</div>

		{% if post.related_posts %}
			<div class="container space-y-8">
				<div class="row">
					<div>
						<h2 class="text-center text-xl lg:text-2xl font-bold">{{- __( 'You may also like', 'creatorfund' ) -}}</h2>
					</div>
				</div>
				<div class="row gap-y-6 lg:gap-y-10">
					{% for post in post.related_posts %}
						<div class="lg:col-3/12">
							{{-
								include(
									'components/tease-post.html.twig',
									{
										classes: [ 'lg:h-full' ],
										post: post,
										size: 'size-3'
									}
								)
							-}}
						</div>
					{% endfor %}
				</div>
			</div>
		{% endif %}
	</main>
{% endblock %}
