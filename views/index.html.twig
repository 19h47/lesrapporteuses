<!DOCTYPE html>
<html
    itemscope
    itemtype="http://schema.org/WebPage"
    {{ html_class( 'no-js no-touch is-ontop is-loading' ) }}
    {{ site.language_attributes }}
>

	<head>

		<meta charset="{{ site.charset }}">
		<link rel="profile" href="http://gmpg.org/xfn/11">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=5,viewport-fit=cover">
		<meta name="format-detection" content="telephone=no">

		{{ function( 'wp_head' ) }}

	</head>

	<body
		data-module-load="main"
		class="cursor-wait"
	>

		<div data-load-container data-url="{{ current_url }}" class="duration-1000 ease-in-out transition-opacity">
			<div id="{{ post.id ? "page-#{post.id}" : 'page' }}" {{ body_class( 'page-content' ) }} data-module-scroll="main">

				{% block header %}
					{{- include( 'header.html.twig', { classes: [] } ) -}}
				{% endblock %}

				<main>
					{% block main %}
						<div class="container">
							<div class="row items-end">
								<div class="lg:col-4/12 lg:ml-1/12">
									<h1 class="text-2xl lg:text-5xl font-bold">{{- post.title -}}</h1>
								</div>

								<div class="lg:col-6/12 mt-5 lg:mt-0"><hr class="bg-black w-full h-[0.0625rem]"></div>
							</div>

							{% if post.content %}
								<div class="row mt-5 lg:mt-10">
									<div class="lg:col-10/12 lg:ml-1/12 wysiwyg">
										{{- post.content -}}
									</div>
								</div>
							{% endif %}

							{% if post.blocks %}
								<div class="container mt-10">
									<div class="row">
										<div class="lg:col-10/12 lg:ml-1/12 flex flex-col gap-y-2 lg:gap-y-6">
											{{- include( 'blocks/blocks.html.twig', { blocks: post.blocks } ) -}}
										</div>
									</div>
								</div>
							{% endif %}
						</div>
					{% endblock %}
				</main>

				{% block footer %}
					{{- include( 'footer.html.twig' ) -}}
				{% endblock %}

			</div>
		</div>


		{{ function( 'wp_footer' ) }}

		<div id="svg-sprite" style="display: none;">{{- include( 'icons.svg', ignore_missing = true ) -}}</div>

	</body>

</html>
