{#
 # Button rounded
 #}

<{{ tag | default( "button type=\"#{ type | default( 'button' ) }\"" ) }}
	class="{{
		html_classes(
			classes | default( [] ) | join( ' ' ),
			'transition-colors',
			'duration-1000',
			'ease-in-out',
			'focus:bg-black/0',
			'hover:bg-black/0',
			'focus:text-black',
			'hover:text-black',
			'border-[0.0625rem]',
			'border-black',
			'rounded-full',
			'bg-black',
			'text-white',
			'w-11',
			'h-11',
			'flex',
			'items-center',
			'justify-center'
		)
	}}"
	{{ attributes ? attributes | map( ( value, key ) => ( value == '' ? key : "#{key}=\"#{value}\"" ) ) | join( ' ' ) | raw }}
>
	{% block title %}
		{{- title -}}
	{% endblock %}
</{{ tag | default( 'button' ) }}>
